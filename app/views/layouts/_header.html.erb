	<% if logged_in? %>
		<div class="container">		
				<% unless @activity.nil? %>
				<ul class="nav navbar-nav navbar-left">
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= @activity.name %><b class="caret"></b></a>
