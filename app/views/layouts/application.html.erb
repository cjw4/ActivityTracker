<!DOCTYPE html>
<html>
  <head>
    <title>Habitual Creature</title>
		<%= render 'layouts/head' %>
	</head>
	<body>
		<%= render 'layouts/header' %>
			<div class="main col-xs-12 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">
				<% flash.each do |message_type, message| %>
					<div class="alert alert-<%= message_type %>"><%= message %></div>
				<% end %>      			
				<%= yield %>
			</div>
		<%= render 'layouts/footer' %>
	</body>
</html>
